---
import dummyData from '../data/dummy-data.json';

interface Props {
  videoUrl?: string;
}

const { videoUrl = dummyData.videoUrl } = Astro.props;
---

<div class="h-full overflow-hidden">
  <div class="h-full bg-gray-800 flex items-center justify-center overflow-hidden">
    <video 
      src={videoUrl} 
      class="w-full h-full object-contain"
      controls
      autoplay
      loop
      muted
    />
  </div>
</div> 